{% extends 'template.html.twig' %}

{% block title %}Detalles de usuarios{% endblock %}
  {% block header %}

        <header id="topbar" class="ph10">

             <div class="topbar-left">
            <ol class="breadcrumb">
              <li class="crumb-active"><a href="#">Usuarios</a></li>                            
              <li class="crumb-trail">Detalles</li>
            </ol>
          </div>
          
        </header>
         <header id="topbar" class="ph10">
          <div class="topbar-left">
            <ul class="nav nav-list nav-list-topbar pull-left">
              <li class="active"><a href="{{ path('user_new') }}">Listado de Usuarios</a></li>
              <li class="active"><a href="{{ path('user_edit', {'id': user.id}) }}">Editar Usuario</a></li>
              <li>{{ include('user/_delete_form.html.twig') }}</li>
              
            </ul>
          </div>
         
        </header>
          
          
      {% endblock %}

{% block body %}
<div class="container">
    <div class="panel">
              <div class="panel-heading"><span class="panel-title"><span class="fa fa-info"></span>Detalles de Usuario</span>
                
              </div>
            </div>
    <div id="spy1" class="row">
<div class="col-sm-12">
                <div class="panel">
                  <div class="panel-body pn">
                    
                      <table class="table">
        <tbody>
          
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>            
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            
            <tr>
                <th>Roles</th>
                <td>
                {% for user in user.roles %}
                        {% if user == 'ROLE_ADMIN' %}
                           ADMINISTRADOR
                        {% endif %}

                        {% if user == 'ROLE_USERA' %}
                           USUARIO A
                        {% endif %}

                        {% if user == 'ROLE_USERB' %}
                           USUARIO B
                        {% endif %}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
   </tbody>
                      </table>
               
                </div>
              </div>
          </div>
      </div>
   
{% endblock %}
